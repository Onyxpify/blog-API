{   "version": 2,
    "name": "My CRUD Blog",
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
        { "src": "/login", "dest": "./routes/user.js" },
        { "src": "/register", "dest": "./routes/user.js" },
        { "src": "/logout", "dest": "./routes/user.js" },
        { "src": "/create", "dest": "./routes/blog.js" },
        { "src": "/:id", "dest": "./routes/blog.js" },
        { "src": "/(.*)", "dest": "./app.js" }
    ]
  }